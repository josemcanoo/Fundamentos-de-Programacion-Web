// Pruebas para comparar pesos, alturas y contraseñas
let weightComparison = eleWeight < mouseWeight;
let heightComparison = ostrichHeight > duckHeight;
let pwdMatch = pwd1.toLowerCase() === pwd2.toLowerCase();

